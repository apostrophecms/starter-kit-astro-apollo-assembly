{
  "name": "apollo-assembly-backend",
  "version": "1.0.0",
  "description": "Apostrophe backend for the ApostropheCMS Multisite + Astro Apollo template",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app",
    "dev": "APOS_EXTERNAL_FRONT_KEY=dev nodemon",
    "build": "NODE_ENV=production node app --all-sites @apostrophecms/asset:build",
    "serve": "NODE_ENV=production node app",
    "release": "npm install && npm run build && npm run migrate",
    "migrate": "NODE_ENV=production node app --all-sites @apostrophecms/migration:migrate",
    "test": "npm run lint",
    "lint": "eslint . && stylelint {dashboard,sites}/modules/**/*.{scss,vue}",
    "load-starter-content": "./scripts/load-starter-content"
  },
  "engines": {
    "node": ">=20.3.0 <21 || >=22.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/starter-kit-astro-apollo-assembly"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "dependencies": {
    "@apostrophecms-pro/advanced-permission": "^3.0.4",
    "@apostrophecms-pro/automatic-translation": "^1.4.2",
    "@apostrophecms-pro/doc-template-library": "^2.2.6",
    "@apostrophecms-pro/document-versions": "^2.6.0",
    "@apostrophecms-pro/import-export-translation": "^1.0.3",
    "@apostrophecms-pro/multisite": "^4.4.1",
    "@apostrophecms-pro/multisite-dashboard": "^1.4.3",
    "@apostrophecms-pro/palette": "^4.8.1",
    "@apostrophecms-pro/seo-assistant": "^1.2.1",
    "@apostrophecms/favicon": "^1.1.3",
    "@apostrophecms/mongodb-snapshot": "^1.1.0",
    "@apostrophecms/open-graph": "^1.2.3",
    "@apostrophecms/seo": "^1.3.1",
    "@apostrophecms/vite": "^1.1.0",
    "apostrophe": "^4.21.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "eslint-config-apostrophe": "^6.0.1",
    "nodemon": "^3.0.1",
    "stylelint": "^16.23.1",
    "stylelint-config-apostrophe": "^4.3.0"
  }
}
